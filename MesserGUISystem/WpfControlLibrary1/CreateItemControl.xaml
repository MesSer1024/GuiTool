<UserControl x:Class="MesserControlsLibrary.CreateItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel Name="ContentRoot" Width="300" Height="300" Background="DimGray">
        <DockPanel DockPanel.Dock="Top">
            <Label DockPanel.Dock="Left">Create New Item:</Label>
            <Button DockPanel.Dock="Right"  Background="Black" Width="16" Height="16" Margin="4" HorizontalContentAlignment="Center" VerticalContentAlignment="Top" Padding="0,-4,0,0" Click="onAbort">
                <Label Foreground="Yellow" Padding="0">x</Label>
            </Button>
            <Label />
        </DockPanel>
        <DockPanel DockPanel.Dock="Bottom">
            <Button DockPanel.Dock="Right" MinWidth="75" Margin="0,4,4,4" Click="onOk">OK</Button>
            <Button DockPanel.Dock="Right" MinWidth="75" Margin="0,4,8,4" Click="onAbort">ABORT</Button>
            <Label />
        </DockPanel>
        <ListBox Name="_availableItems" MinHeight="200">
            
        </ListBox>
    </DockPanel>
</UserControl>
